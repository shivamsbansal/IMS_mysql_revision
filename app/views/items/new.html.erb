<% provide(:title, 'New Item') %>
<h1>New Item</h1>

<div class="row">
  <div class="span4 offset4">
  	<% if @item!=nil %>
  		<%= render 'shared/error_messages', object: @item %>
  	<% end %>
  	
    <%= form_tag("/items/redirect", method: :get, remote: true) do %>

      <%= label_tag(:category, "Category:") %>
      <%= select_tag(:category, options_for_select(@itemCategory)) %>

      <%= submit_tag "Select a category", class: "btn  btn-primary" %>
  	<% end %>
  </div>
</div>

<div id="category_form">        
</div>

