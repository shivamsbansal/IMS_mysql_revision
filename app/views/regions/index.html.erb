<% provide(:title, 'All regions') %>
<h1>All regions</h1>

<%= will_paginate @regions %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Region Name</th>
      <th>Region Id</th>
      <th>Edit</th>
    </tr>
  </thead>  
  <% @regions.each do |region| %>
    <tr>
      <td><%=region.nameRegion %></td>
      <td><%=region.idRegion %></td>
      <td><%=link_to "edit", edit_region_path(region[:id]) %></td>
    </tr>     
  <% end %>

</table>

<%= will_paginate @regions %>
