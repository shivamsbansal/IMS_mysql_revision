  <thead>
    <tr>
      <th>Item</th>
      <th>PO Id</th>
      <th>Procurement Date</th>
      <th>Invoice No.</th>
      <th>Invoice Date</th>
      <th>Warranty Period</th>
      <th>Stock Supplied</th>
