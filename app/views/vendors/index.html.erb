<% provide(:title, 'All vendors') %>
<h1>All vendors</h1>

<%= will_paginate @regions %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Vendor Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Category</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <% @vendors.each do |vendor| %>
    <tr>
      <td><%=vendor.nameVendor %></td>
      <td><%=vendor.email %></td>
      <td><%=vendor.phone %></td>
      <% if vendor.category_id != nil %>
      <td><%=vendor.category.nameCategory %></td>
      <% else %>
      <td><%='All' %></td>
      <% end %>
      <td><%=link_to "edit", edit_vendor_path(vendor[:id]) %></td>
      <td><%= link_to "delete ", vendor, method: :delete, data: { confirm: "You sure?" } %></td>
    </tr>     
  <% end %>

</table>

<%= will_paginate @regions %>
