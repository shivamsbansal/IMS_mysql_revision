<% provide(:title, 'Stations') %>
<h1>Stations</h1>

<h2><%="#{current_user.level_type}: #{@name}" %></h2>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Station Name</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>Pincode</th>
      <th>Contact Details</th>
      <th>Territory Id</th>
      <th>Region Id</th>
      <% if current_user.admin? %>
      <th>Edit</th>
      <% end %>
    </tr>
  </thead>
<% if current_user[:level_type]!=nil %>
  <% @stations.each do |station| %>
    <tr>
      <td><%=link_to station.nameStation, '#' %></td>
      <td><%=station.addr1 %></td>
      <td><%=station.addr2 %></td>
      <td><%=station.pincode %></td>
      <td><%=station.contactDetails %></td>
      <td><%=station.territory.idTerritory %></td>
      <td><%=station.territory.region.idRegion %></td>
      <% if current_user.admin? %>
      <td><%=link_to "edit", edit_station_path(station[:id]) %></td>
      <% end %>
    </tr>     
<% end %>
<% end %>

</table>





